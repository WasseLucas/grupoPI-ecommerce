<%- include("../partials/header"); %>

    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
        <link rel="stylesheet" href="stylesheets/stylespagamento.css">

    </head>
    
    <main>
        <div class="barraLaranja"></div>
        <% if (total && total.length !=0) { %>
        <div id="middleBox">
            <div id="containerCenter">
                <div id="leftPanel">
                    <div id="EyePay">
                        <div id="iconEye">
                            <span class="iconify" data-icon="mdi:eye-plus" style="color: #ff6500;"></span>
                        </div>
                        <div id="textPay">
                            <p>FORMA DE PAGAMENTO</p>
                        </div>
                    </div>
                    <div id="Pix">
                        <form action="" id="pix2">
                            <!-- PROBLEMA -->
                            <button CLASS="buttonPayment" type="button" class="btn btn-primary" data-bs-toggle="modal"
                            data-bs-target="#exampleModal">
                                <span class="iconify" data-icon="ic:round-pix" style="color: white;"></span>
                                <span class="iconify" style="color: white;">PIX</span> 
                            </button>
                        </form>

                        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                            aria-hidden="true"> 
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h3  class="modal-title fs-5" id="exampleModalLabel" class="text-center">
                                            <a class="text-danger">PAGUE ATRAVÉS DO O PIX</a>
                                        </h3>
                                        
                                    </div>
                                    <div class="modal-body">
                                        <h4 class="text-center" > <a class=".text-danger">Escaneie o qr code ou cole o
                                                código abaixo no app do seu banco e conclua
                                                sua compra: </a> </h4>
                                        <img class="rounded mx-auto d-block" width="70px"
                                            src="images/QR_Code_Example.svg.png">
                                        <p class="text-center"> <a class=".text-danger">
                                                codigo.aleatorio.de.compra.através.do.pix </a> </p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                            data-bs-dismiss="modal">Close</button>
                                        <button type="button" class="btn btn-primary">PAGAR AGORA</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div id="Boleto">
                        <span class="iconify" data-icon="ic:round-barcode" style="color: #ff6500;"></span>
                        <div>
                            <p>BOLETO BANCÁRIO</p>
                        </div>

                    </div>
                    <div id="CC">
                        <span class="iconify" data-icon="ic:round-credit-card" style="color: #ff6500;"></span>
                        <div>
                            <p>CARTÃO DE CRÉDITO</p>
                        </div>

                    </div>
                </div>
            </div>
            <div id="bottomPanel">
                <h3 id="tituloEsquerda">
                    TOTAL DA SUA COMPRA:
                </h3>
                <h2 id="valorEsquerda">
                    <%= total.toLocaleString('pt-br',{style: 'currency' , currency: 'BRL' })%>
                </h2>
            </div>

        </div>
        <div class="bottomBox">
            <div id="back">
                <form action="/carrinho">
                    <button id="backText">VOLTAR</button>
                </form>
            </div>
            <div id="next">
                <form action="/finalizar">
                    <button id="nextText">PROSSEGUIR</button>
                </form>
            </div>
        </div>
        <% }else{ %>
            <div class="noProduct">
                <img src="images/stop.gif" alt="IMAGEM ANIMADA DE PARE" class="searching"
                    width="400px" height="320px">
                <p class="noProduct2">OPS! Não encontramos nenhum item no seu carrinho.</p>
                <p class="buyables">Que tal você ir até a página inicial e escolher o melhor presente de Natal?</p>
                <form action="/" class="homeButton2">
                    <button class="backHomeButton">VOLTAR PARA A PÁGINA INICIAL</button>
                </form>
            </div>
            <% } %>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous">
        </script>

    <script>
        const myModal = document.getElementById('myModal')
        const myInput = document.getElementById('myInput')

        myModal.addEventListener('shown.bs.modal', () => {
            myInput.focus()
        })
    </script>
    <%- include('../partials/footer'); %>